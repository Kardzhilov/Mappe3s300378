<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.micha.mappe3s300378.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vInput" />

                <EditText
                    android:id="@+id/plainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:background="@color/bTint"
                    android:digits=" .,?'!/():;=+-_$@0123456789abcdefghijklmnopqrstuvwxyzæøåABCDEFGHIJKLMNOPQRSTUVWXYZÆØÅ"
                    android:ems="10"
                    android:inputType="text|textMultiLine" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/vOutput" />

            <TextView
                android:id="@+id/rawView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bTint"
                android:textColor="@color/flashBlack"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
